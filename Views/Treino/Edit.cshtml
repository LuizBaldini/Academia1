@model Academia1.Models.TreinoViewModel

@{
    ViewData["Title"] = "Editar Treino";
}

<h2 class="text-warning mb-4"> Editar Treino</h2>

<div class="card bg-dark text-light shadow-lg mb-5">
    <div class="card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Treino.TreinoID" />
            <!-- Aluno -->
            <div class="mb-3">
                <label asp-for="Treino.AlunoID" class="form-label text-warning">Aluno</label>
                <select asp-for="Treino.AlunoID" asp-items="Model.Alunos" class="form-select bg-secondary text-light border-warning">
                    <option value="">Selecione o aluno</option>
                </select>
                <span asp-validation-for="Treino.AlunoID" class="text-danger"></span>
            </div>

            <!-- Nome do treino -->
            <div class="mb-3">
                <label asp-for="Treino.NomeTreino" class="form-label text-warning">Nome do Treino</label>
                <input asp-for="Treino.NomeTreino" class="form-control bg-secondary text-light border-warning" />
                <span asp-validation-for="Treino.NomeTreino" class="text-danger"></span>
            </div>

            <!-- Descrição -->
            <div class="mb-3">
                <label asp-for="Treino.Descricao" class="form-label text-warning">Descrição</label>
                <textarea asp-for="Treino.Descricao" class="form-control bg-secondary text-light border-warning"></textarea>
                <span asp-validation-for="Treino.Descricao" class="text-danger"></span>
            </div>

            <!-- Data -->
            <div class="mb-3">
                <label asp-for="Treino.Data" class="form-label text-warning">Data</label>
                <input asp-for="Treino.Data" type="date" class="form-control bg-secondary text-light border-warning" />
                <span asp-validation-for="Treino.Data" class="text-danger"></span>
            </div>

            <!-- Hora -->
            <div class="mb-3">
                <label asp-for="Treino.Hora" class="form-label text-warning">Hora</label>
                <input asp-for="Treino.Hora" type="time" class="form-control bg-secondary text-light border-warning" />
                <span asp-validation-for="Treino.Hora" class="text-danger"></span>
            </div>

            <!-- Exercícios -->
            <div class="mb-4">
                <label class="form-label text-warning">Exercícios</label>
                <div class="row">
                    @foreach (var exercicio in Model.Exercicios)
                    {
                        <div class="col-md-4 mb-2">
                            <div class="form-check">
                                <input type="checkbox"
                                       name="ExerciciosSelecionados"
                                       value="@exercicio.ExercicioID"
                                       class="form-check-input border-warning"
                                       id="ex_@exercicio.ExercicioID"
                                @(Model.ExerciciosSelecionados.Contains(exercicio.ExercicioID) ? "checked" : "") />
                                <label class="form-check-label text-light" for="ex_@exercicio.ExercicioID">
                                    @exercicio.Nome
                                </label>
                            </div>
                        </div>
                    }
                </div>
            </div>

            

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-warning text-dark fw-bold">
                    <i class="bi bi-save"></i> Salvar
                </button>
                <a asp-action="Index" class="btn btn-outline-light">
                    <i class="bi bi-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
