@model Academia1.Models.Treino

@{
    ViewData["Title"] = "Detalhes do Treino";
}

<div class="container mt-4">
    <div class="card shadow rounded-3">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">@Model.NomeTreino</h3>
        </div>

        <div class="card-body">
            <h5 class="card-title text-center mb-4">Informações do Treino</h5>

            <dl class="row">
                <dt class="col-sm-3">Nome do Treino</dt>
                <dd class="col-sm-9">@Model.NomeTreino</dd>

                <dt class="col-sm-3">Descrição</dt>
                <dd class="col-sm-9">@Model.Descricao</dd>

                <dt class="col-sm-3">Data</dt>
                <dd class="col-sm-9">@Model.Data.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Hora</dt>
                <dd class="col-sm-9">@Model.Hora.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-3">Aluno</dt>
                <dd class="col-sm-9">@Model.Aluno.UserName</dd>

                <dt class="col-sm-3">Personal</dt>
                <dd class="col-sm-9">@Model.Personal.UserName</dd>

                <dt class="col-sm-3">Exercícios</dt>
                <dd class="col-sm-9">
                    @foreach (var exercicio in Model.Exercicios)
                    {
                        <span class="badge bg-primary me-1">@exercicio.Nome</span>
                    }
                </dd>
            </dl>

            <div class="d-flex justify-content-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model.TreinoID" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square"></i> Editar
                </a>
                <a asp-action="Delete" asp-route-id="@Model.TreinoID" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Excluir
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar
                </a>
            </div>
        </div>
    </div>
</div>
