@model Academia1.Models.Treino

@{
    ViewData["Title"] = "Detalhes do Treino";
}

<h2>@Model.NomeTreino</h2>

<div>
    <h4>Informações do Treino</h4>
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.NomeTreino</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Data</dt>
        <dd class="col-sm-10">@Model.Data.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-2">Hora</dt>
        <dd class="col-sm-10">@Model.Hora.ToString("HH:mm")</dd>

        <dt class="col-sm-2">Aluno</dt>
        <dd class="col-sm-10">@Model.Aluno.UserName</dd>

        <dt class="col-sm-2">Personal</dt>
        <dd class="col-sm-10">@Model.Personal.UserName</dd>

        <dt class="col-sm-2">Exercícios</dt>
        <dd class="col-sm-10">
            @foreach (var exercicio in Model.Exercicios)
            {
                <span>@exercicio.Nome</span>

                <br />
            }
        </dd>
    </dl>
</div>

<a asp-action="Edit" asp-route-id="@Model.TreinoID" class="btn btn-primary">Editar</a>
<a asp-action="Delete" asp-route-id="@Model.TreinoID" class="btn btn-danger">Excluir</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>

