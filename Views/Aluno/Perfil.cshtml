@model Academia1.Models.Aluno

@{
    ViewData["Title"] = "Perfil do Aluno";
}
@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensagem"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header" style="background-color: #FFC107; color: #000;">
            <h4 class="mb-0">Perfil do Aluno</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-4">Nome</dt>
                <dd class="col-sm-8">@Model.UserName</dd>

                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Model.Email</dd>

                <dt class="col-sm-4">Telefone</dt>
                <dd class="col-sm-8">@Model.PhoneNumber</dd>

                <dt class="col-sm-4">Data de Nascimento</dt>
                <dd class="col-sm-8">@Model.Data_Nascimento.ToShortDateString()</dd>

                <dt class="col-sm-4">Instagram</dt>
                <dd class="col-sm-8">@Model.Instagram</dd>

                <dt class="col-sm-4">Observações</dt>
                <dd class="col-sm-8">@Model.Observacoes</dd>

                <dt class="col-sm-4">Personal Responsável</dt>
                <dd class="col-sm-8">@Model.Personal?.UserName</dd>
            </dl>
        </div>
        <div class="card-footer text-end" style="background-color: #FFC107;">
            <a asp-action="Editar" class="btn btn-dark me-2">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-dark">
                <i class="bi bi-arrow-left"></i> Voltar
            </a>
        </div>
    </div>
</div>
