@model Academia1.Models.Personal

@{
    ViewData["Title"] = "Detalhes do Personal";
}

<h2>@ViewData["Title"]</h2>

<dl class="row">
    <dt class="col-sm-2">Usuário</dt>
    <dd class="col-sm-10">@Model.UserName</dd>

    <dt class="col-sm-2">Email</dt>
    <dd class="col-sm-10">@Model.Email</dd>

    <dt class="col-sm-2">Nascimento</dt>
    <dd class="col-sm-10">@Model.Data_Nascimento.ToShortDateString()</dd>

    <dt class="col-sm-2">Instagram</dt>
    <dd class="col-sm-10">@Model.Instagram</dd>

    <dt class="col-sm-2">Observações</dt>
    <dd class="col-sm-10">@Model.Observacoes</dd>

    <dt class="col-sm-2">Especialidade</dt>
    <dd class="col-sm-10">@Model.Especialidade</dd>
</dl>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
