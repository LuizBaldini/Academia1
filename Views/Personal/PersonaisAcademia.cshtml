@model IEnumerable<Academia1.Models.Personal>

@{
    ViewData["Title"] = "Personais da Academia";
}

@if (TempData["Mensagem"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Mensagem"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<h2 class="text-warning mb-4">Lista de Personais</h2>

<div class="mb-4">
    <a asp-action="Create" class="btn btn-warning"><i class="bi bi-plus-circle"></i> Adicionar personal</a>
</div>
<div class="row">
    @foreach (var personal in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title"><i class="bi bi-person-circle"></i> @personal.UserName</h5>
                </div>
                <div class="card-body">
                    <p><strong>Email:</strong> @personal.Email</p>
                    <p><strong>Telefone:</strong> @personal.PhoneNumber</p>

                    <div class="d-flex justify-content-between">
                        <a asp-action="DetailsPersonal" asp-route-id="@personal.Id" class="btn btn-info btn-sm"><i class="bi bi-info-circle"></i> Detalhes</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


