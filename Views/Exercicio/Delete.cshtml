@model Academia1.Models.Exercicio

@{
    ViewData["Title"] = "Excluir exercício";
}

<h2 class="text-warning mb-4">Excluir exercicio</h2>

<div class="text-white">
    <h4>Exercicio</h4>
    <hr class="border-warning" />
    <dl class="row">
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10 text-black">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10 text-black">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10 text-black">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ExercicioID" />
        <div class="text-center">
            <input type="submit" value="Excluir" class="btn btn-danger" />
        </div>
    </form>
</div>

<div class="text-center mt-3">
    <a asp-action="Index" class="btn btn-dark text-warning">Voltar aos Exercicios</a>
</div>
