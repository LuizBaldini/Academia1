@model Academia1.Models.Exercicio

<h2 class="text-warning mb-4">Detalhes do exercicio</h2>

<div class="text-white">
    <h4>Exercicio</h4>
    <hr class="border-warning" />
    <dl class="row">
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10 text-black">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.Categoria)
        </dt>
        <dd class="col-sm-10 text-black">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class="col-sm-2 text-warning">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10 text-black">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>
</div>



<div class="text-center mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.ExercicioID" class="btn btn-warning">Editar </a> |
    <a asp-action="Index" class="btn btn-dark text-warning">Voltar aos Exercicios</a>
</div>
